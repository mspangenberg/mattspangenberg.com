// ==========================================================================
// Home Section
// ==========================================================================

#section0
    animation-duration 0.45s
    animation-delay 0.6s

#section0 .container
    transition all 0.15s ease-out

.section0-background-left
    background-color transparent
    border-left 0px solid transparent
    border-right 0px solid transparent
    border-top 0px solid $left-angle
    height 0px
    left 0px
    margin 0px auto
    position fixed
    right 0px
    top 0px
    transition all 0.45s ease-out
    width 0px
    z-index 1

.section0-background-right
    background-color transparent
    border-left 0px solid transparent
    border-right 0px solid transparent
    border-bottom 0px solid $right-angle
    bottom 0px
    height 0px
    left 0px
    margin 0px auto
    position fixed
    transition all 0.45s ease-out
    right 0px
    width 0px
    z-index 1

.section0-background-left-animate-to-menu
    border-top 0px solid $left-angle !important
    border-left-width 0px !important

.section0-background-right-animate-to-menu
    border-bottom 0px solid $right-angle !important
    border-right-width 0px !important

#section0-content
    margin-top 15px
    width 100%

.height-minus-nav
    height -moz-calc(100% - 45px)
    height -webkit-calc(100% - 45px)
    height -o-calc(100% - 45px)
    height calc(100% - 45px)

#img-profile
    background url($img-thumb-src)
    background-position center -30px
    background-repeat no-repeat
    background-size 195px auto
    border 1px solid $img-thumb-border
    border-radius 95px
    height 190px
    left 0px
    margin 0px auto
    position absolute
    right 0px
    top -moz-calc(50% - 95px)
    top -webkit-calc(50% - 95px)
    top -o-calc(50% - 95px)
    top calc(50% - 95px)
    width 190px

#section-0-prefix
    font-size 14px
    font-weight 500
    letter-spacing 1px
    margin-bottom 0px
    text-shadow $home-text-shadows 0px 1px
    text-transform uppercase

#section-0-h1
    font-size 36px
    font-weight 100
    margin-top 5px
    text-shadow $home-text-shadows 0px 2px

#section-0-p
    font-size 16px
    font-weight 100
    text-shadow $home-text-shadows 0px 1px

#links-social
    bottom 15px
    position absolute
    right 12px

.icn-social
    border 1px solid $icn-social-border
    border-radius 30px
    display inline-block
    font-size 18px
    height 60px
    line-height 60px
    margin 15px 5px 5px
    text-align center
    width 60px

#angle-down
    animation-iteration-count infinite
    bottom 15px
    cursor pointer
    font-size 30px
    height 90px
    left 0px
    margin 0px auto
    position absolute
    right 0px
    width 90px

#angle-down i
    bottom 0px
    left 0px
    margin 0px auto
    position absolute
    right 0px
    text-align center



// ==========================================================================
// Media Queries Example
// ==========================================================================

// Extra Small devices (up to 479px)
@media (max-width: 479px)

    #section-0-h1
        font-size 24px
        font-weight 500

    #section-0-p
        font-size 14px
        font-weight 500

    #img-profile
        height 150px
        top -moz-calc(50% - 75px)
        top -webkit-calc(50% - 75px)
        top -o-calc(50% - 75px)
        top calc(50% - 75px)
        width 150px

    #links-social
        bottom -15px
        left 0px
        margin 0px auto
        right 5px

// Medium Small devices (tablets, 480px and up)
@media (min-width: 480px), (max-width: 767px)

    #section0-content
        margin-top 90px

    #img-profile
        height 150px
        top -moz-calc(50% - 75px)
        top -webkit-calc(50% - 75px)
        top -o-calc(50% - 75px)
        top calc(50% - 75px)
        width 150px

    #links-social
        bottom 120px
        left 0px
        margin 0px auto

// Small devices (tablets, 768px and up)
@media (min-width: 768px), (max-width: 991px)

    .example
        font-size 14px

// Medium devices (desktops, 992px and up)
@media (min-width: 992px), (max-width: 1199px)

    .example
        font-size 14px

// Large devices (large desktops, 1200px and up)
@media (min-width: 1200px)

    .example
        font-size 14px