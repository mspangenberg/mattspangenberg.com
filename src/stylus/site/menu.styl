/*
==========================================================================
Global Navigation Menu
==========================================================================
*/

#nav-background
    height 0px
    background-color transparent
    position fixed
    width 100%
    top 0px
    right 0
    left 0
    z-index 99
    -webkit-transition all 0.3s ease-out
    -moz-transition all 0.3s ease-out
    -o-transition all 0.3s ease-out
    transition all 0.3s ease-out
    margin 0 auto

.nav-background-visible
    height 45px !important
    background-color $nav-background !important

.navbar
    position fixed
    z-index 101
    top 0px
    left 0px
    right 0px
    height 45px
    min-height 45px
    margin 0
    padding 0
    line-height 44px
    visibility hidden
    opacity 0
    -webkit-transition all 0.3s ease-out
    -moz-transition all 0.3s ease-out
    -o-transition all 0.3s ease-out
    transition all 0.3s ease-out

    background-image none
    background-color transparent !important
    border-radius 0px
    box-shadow none
    border none

.navbar-visible
    visibility visible !important
    opacity 1 !important

.navbar-default .navbar-brand
    color $nav-brand

.navbar-brand
    float left
    height 45px
    padding 0px 15px
    font-size 14px
    line-height 45px

.navbar #menu li a
    color $nav-links

.navbar-default .navbar-nav>.active>a
    background-image none
    box-shadow none

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:hover, .navbar-default .navbar-nav>.active>a:focus
    background-color transparent

.navbar-toggle
    position relative
    float right
    padding 6px 10px
    margin-top 9px
    margin-right 15px
    margin-bottom 8px
    background-color transparent
    background-image none
    border: 1px solid transparent
    border-radius 0px

.navbar-nav
    margin 0px -15px

.collapsing,
.navbar-collapse.in
    background-color $nav-dropdown

.collapsing #menu li a,
.navbar-collapse.in #menu li a
    margin-top 10px

#menu li
    display inline-block
    height 45px
    margin 0px 15px
    overflow hidden

#menu li.active
    border-bottom 1px solid $nav-active-color

#menu li a
    text-decoration none
    font-size 14px

#menu li a:hover
    color $nav-hover-color

#menu li.active a:hover
    color $nav-active-hover-color

#menu li:hover
    border-bottom 1px solid $nav-hover-color

#menu li a
#menu li.active a
    display block

#menu li.active a
    color $nav-active-color

/*
==========================================================================
Media Queries
==========================================================================
*/

/* Extra Small devices (up to 479px) */
@media (max-width: 479px)

    .test
        font-size 14px

/* Medium Small devices (tablets, 480px and up) */
@media (min-width: 480px) and (max-width: 767px)

    .test
        font-size 14px

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) and (max-width: 991px)

    .test
        font-size 14px

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) and (max-width: 1199px)

    .test
        font-size 14px

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px)

    .test
        font-size 14px