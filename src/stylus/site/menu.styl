// ==========================================================================
// Global Navigation Menu
// ==========================================================================

#nav-background
    background-color transparent
    height 0px
    left 0px
    margin 0px auto
    position fixed
    right 0px
    top 0px
    transition all 0.3s ease-out
    width 100%
    z-index 99

.nav-background-visible
    background-color $nav-background !important
    height 45px !important

.navbar
    background-color transparent !important
    background-image none
    border none
    border-radius 0px
    box-shadow none
    height 0px
    left 0px
    line-height 44px
    margin 0px
    min-height 0px
    padding 0px
    opacity 0
    position fixed
    right 0px
    top 0px
    transition all 0.2s ease-out
    visibility hidden
    z-index 101

.navbar-visible
    height 45px !important
    min-height 45px !important
    opacity 1 !important
    visibility visible !important

.navbar-default .navbar-brand
    color $nav-brand

.navbar-brand
    float left
    font-size 14px
    height 45px
    line-height 45px
    padding 0px 15px

.navbar #menu li a
    color $nav-links

.navbar-default .navbar-nav>.active>a
    background-image none
    box-shadow none

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:hover, .navbar-default .navbar-nav>.active>a:focus
    background-color transparent

.navbar-toggle
    background-color transparent
    background-image none
    border 1px solid transparent
    border-radius 0px
    float right
    margin 9px 15px 8px 0px
    padding 6px 10px
    position relative

.navbar-nav
    margin 0px -15px

.collapsing,
.navbar-collapse.in
    background-color $nav-dropdown

.collapsing #menu li a,
.navbar-collapse.in #menu li a
    margin-top 10px

#menu li
    display inline-block
    height 45px
    margin 0px 15px
    overflow hidden

#menu li.active
    border-bottom 1px solid $nav-active-color

#menu li a
    font-size 14px
    text-decoration none

#menu li a:hover
    color $nav-hover-color

#menu li.active a:hover
    color $nav-active-hover-color

#menu li:hover
    border-bottom 1px solid $nav-hover-color

#menu li a
#menu li.active a
    display block

#menu li.active a
    color $nav-active-color