.polygon
	height 100%
	position absolute
	top 0
	width 100%
	z-index 0

.overlay
	height 100%
	left 0
	pointer-events none
	position absolute
	top 0
	width 100%

.noise
	background-image url("../img/noise.png")
	opacity 0.15