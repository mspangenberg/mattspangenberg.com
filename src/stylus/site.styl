// ==========================================================================
// Global Styles
// ==========================================================================

*
    font-family 'Lato', 'RobotoSlab-Thin', Arial, Helvetica, sans-serif !important
    color #ffffff
    text-align center
    -webkit-font-smoothing subpixel-antialiased

body
    background-color #333

.fa
  font-family 'FontAwesome' !important

#fullpage
    z-index 2

// ==========================================================================
// Import Nib - Providing Robust Cross-Browser CSS3 Mixins
// ==========================================================================
@import 'nib'

// ==========================================================================
// Site Style Imports
// ==========================================================================

// Variables
@import "site/variables.styl"

// Override Classes
@import "site/overrides.styl"

// Polygon Background
@import "site/polygon.styl"

// Global Navigation Menu
@import "site/menu.styl"

// Home Section
@import "site/section-0.styl"

// Featured Section
@import "site/section-1.styl"

// Experience Section
@import "site/section-2.styl"

// Skills Section
@import "site/section-3.styl"


// ==========================================================================
// Moving Image Test
// ==========================================================================

.full-slide-height
    height 100%

.wrap
    width 100%
    height 100%
    margin-left auto
    margin-right auto
    position relative

#section2 .imgsContainer
    display block
    position relative
    z-index 1
    width 100%
    height 100%
    overflow hidden

#section2 img
    position relative
    margin 90px auto 0
    height 320px
    z-index 10
    top 100px
    margin-left -20px
    -webkit-transition all 0.7s ease-out
    -moz-transition all 0.7s ease-out
    -o-transition all 0.7s ease-out
    transition all 0.7s ease-out

#iphone2.active
    -webkit-transform translate3d(0px, -100px, 0px)
    -moz-transform translate3d(0px, -100px, 0px)
    -ms-transform translate3d(0px, -100px, 0px)
    transform translate3d(0px, -100px, 0px)


// ==========================================================================
// Media Queries Example
// ==========================================================================

// Extra Small devices (up to 479px)
@media (max-width: 479px)

    .test
        font-size 14px

// Medium Small devices (tablets, 480px and up)
@media (min-width: 480px) and (max-width: 767px)

    .test
        font-size 14px

// Small devices (tablets, 768px and up)
@media (min-width: 768px) and (max-width: 991px)

    .test
        font-size 14px

// Medium devices (desktops, 992px and up)
@media (min-width: 992px) and (max-width: 1199px)

    .test
        font-size 14px

// Large devices (large desktops, 1200px and up)
@media (min-width: 1200px)

    .test
        font-size 14px